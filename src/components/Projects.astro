---
import { getTranslations } from "../helpers/getTranslations";
import Github from "./icons/Github.astro";
import Web from "./icons/Web.astro";

const { projects } = getTranslations(Astro);

const { heading, content, code, website } = projects;
---

<section id="projects">
  <h2>{heading}</h2>
  <ul>
    {
      content.map(c => (
        <li>
          <h3>{c.title}</h3>
          <p class="technologies">{c.technologies}</p>
          {c.description.map(d => (
            <p class="description">{d}</p>
          ))}
          <div>
            <a target="_blank" rel="noopener noreferrer" href={c.github}>
              {code}
              <Github />
            </a>
            <a target="_blank" rel="noopener noreferrer" href={c.website}>
              {website}
              <Web />
            </a>
          </div>
        </li>
      ))
    }
  </ul>

  <style>
    section {
      margin: 3rem 1rem;
      scroll-margin-top: 4rem;
      text-align: center;
    }

    h2 {
      font-size: 1.5rem;
      text-decoration: underline;
      font-weight: bold;
      margin-bottom: 1.8rem;
    }

    ul {
      list-style-type: none;
    }

    li {
      margin-top: 1.8rem;
    }

    h3 {
      font-size: 1.2rem;
      font-weight: bold;
    }

    .technologies {
      font-style: italic;
      margin-top: 0.5rem;
    }

    .description {
      margin-top: 0.5rem;
    }

    div {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 1rem;
    }

    a {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      color: #000;
      padding: 0.3rem 0.8rem;
      border-radius: 0.3rem;
    }

    div a:hover {
      outline: 0.1rem solid #000;
    }
  </style>
</section>
