---
import { getTranslations } from "../helpers/getTranslations";

const { aboutMe } = getTranslations(Astro);
const { heading, content } = aboutMe;
---

<section id="about-me">
  <h2>{heading}</h2>
  {content.map(c => <p>{c}</p>)}
</section>

<style>
  section {
    margin: 3rem 1rem;
    scroll-margin-top: 4rem;
  }

  h2 {
    font-size: 1.5rem;
    text-decoration: underline;
    text-align: center;
    font-weight: bold;
    margin-bottom: 1.8rem;
  }

  p {
    font-size: 1rem;
    text-align: center;
    margin-top: 1rem;
  }
</style>
