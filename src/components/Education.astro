---
import { getTranslations } from "../helpers/getTranslations";

const { education } = getTranslations(Astro);
const { heading, content } = education;
---

<section id="education">
  <h2>{heading}</h2>
  <ul>
    {
      content.map(c => (
        <li>
          <h3>{c.title}</h3>
          <p class="date">{c.period}</p>
          <p class="institution">{c.institution}</p>
          {c.description.map(d => (
            <p class="description">{d}</p>
          ))}
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    scroll-margin-top: 4rem;
    margin: 3rem 1rem;
    text-align: center;
  }

  h2 {
    font-size: 1.5rem;
    text-decoration: underline;
    font-weight: bold;
    margin-bottom: 1.8rem;
  }

  ul {
    list-style-type: none;
  }

  li {
    margin-top: 1.6rem;
  }

  h3 {
    font-size: 1.2rem;
    font-weight: bold;
  }

  .date {
    font-style: italic;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .institution {
    font-style: italic;
    margin-top: 0.5rem;
  }

  .description {
    margin-top: 0.5rem;
  }
</style>
