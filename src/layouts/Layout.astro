---
import { getLocale, getTranslations } from "../helpers/getTranslations";

const locale = getLocale(Astro);
const { document: documentTranslation } = getTranslations(Astro);
const { title: titleTranslation, description: descriptionTranslation } =
  documentTranslation;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      media="(prefers-color-scheme: dark)"
      rel="icon"
      type="image/svg+xml"
      href="/light-mode-favicon.svg"
    />
    <link
      media="(prefers-color-scheme: light)"
      rel="icon"
      type="image/svg+xml"
      href="/light-mode-favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{titleTranslation}</title>
    <meta name="description" content={descriptionTranslation} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>

<style>
  @font-face {
    font-family: "SpaceMono";
    src: url("/fonts/space-mono/space-mono-regular.ttf") format("truetype");
    font-display: optional;
  }

  @font-face {
    font-family: "SpaceMono";
    src: url("/fonts/space-mono/space-mono-bold.ttf") format("truetype");
    font-weight: bold;
    font-display: optional;
  }

  @font-face {
    font-family: "SpaceMono";
    src: url("/fonts/space-mono/space-mono-italic.ttf") format("truetype");
    font-style: italic;
    font-display: optional;
  }

  html {
    font-family: "SpaceMono", monospace, Arial, Helvetica, sans-serif;
    font-variant-ligatures: none;
    scroll-behavior: smooth;
  }

  body {
    max-width: 35rem;
    margin: 0 auto;
  }
</style>
